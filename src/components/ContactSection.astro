---
import {
    LuGithub as GithubIcon,
    LuLinkedin as LinkedinIcon,
    // LuTwitter as TwitterIcon,
} from "react-icons/lu";
import { defaultLang, ui } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import AnimatedSection from "./AnimatedSection";
import ContactForm from "./ContactForm";
import FiverrIcon from "./icons/FiverrIcon";
import TwitterIcon from "./icons/TwitterIcon";

const socialLinks = [
    {
        name: "GitHub",
        icon: GithubIcon,
        href: 'https://github.com/anvarzey'
    },
    {
        name: "LinkedIn",
        icon: LinkedinIcon,
        href: 'https://www.linkedin.com/in/juli%C3%A1n-varo-134759234/'
    },
    {
        name: "Twitter",
        icon: TwitterIcon,
        href: 'https://twitter.com/anvarzey'
    },
    {
        name: "Fiverr",
        icon: FiverrIcon,
        href: 'https://www.fiverr.com/anvarzey23'
    },
];

const locale = (Astro.currentLocale as keyof typeof ui) ?? defaultLang;
const { t } = useTranslations(locale);
---

<AnimatedSection
    sectionId="contact"
    sectionClasses="py-24 px-4 sm:px-6 lg:px-8 bg-card-dark"
    divClasses="max-w-5xl"
    client:load
>
    <h2 class="text-3xl sm:text-4xl font-bold mb-4 text-center">
        <span>{t("contact.title.1")}</span>
        <span class="text-accent-blue">{t("contact.title.2")}</span>
    </h2>
    <p class="text-muted-foreground text-center mb-12 max-w-2xl mx-auto">
        {t("contact.subtitle")}
    </p>

    <div class="grid lg:grid-cols-2 gap-12">
        <ContactForm client:load locale={locale} />
        <div
            class="flex flex-col justify-center items-center lg:items-start space-y-8"
        >
            <div>
                <h3 class="text-xl font-semibold mb-2 text-foreground">
					{t('contact.connect.title')}
                </h3>
                <p class="text-muted-foreground">
                    Find me on these platforms for updates, code, and more.
                </p>
            </div>

            <div class="flex gap-4">
                {
                    socialLinks.map((social) => (
                        <a
                            href={social.href}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="w-14 h-14 rounded-xl bg-card border border-border flex items-center justify-center fill-white hover:border-accent-blue hover:text-accent-blue hover:fill-accent-blue transition-all duration-300 group"
                        >
                            <social.icon className="w-6 h-6 group-hover:scale-110 transition-transform" />
                            <span class="sr-only">{social.name}</span>
                        </a>
                    ))
                }
            </div>

            <div class="text-center lg:text-left">
                <p class="font-mono text-accent-blue text-sm">
                    julian.varo.dev@gmail.com
                </p>
                <p class="text-muted-foreground text-sm mt-1">
					{t('contact.connect.available-label')}
                </p>
            </div>
        </div>
    </div>
</AnimatedSection>
