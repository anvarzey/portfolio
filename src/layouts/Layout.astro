---
import "../styles/global.css";
import { t } from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import { ClientRouter } from "astro:transitions";
import Header from "@/components/Header.astro"

export interface Props {
	title: string;
}

const { title } = Astro.props;

const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang={Astro.currentLocale} class="scroll-smooth dark">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Julian Varo" />
		<meta name="description" content={t("meta-tags.description")} />
		<meta
			name="image"
			content="https://res.cloudinary.com/dfyxdowwb/image/upload/c_scale,q_auto:best,w_479/v1687118147/portfolio/photo_add1zr.webp"
		/>
		<meta name="robots" content="index, follow" />
		<meta property="og:site_name" />
		<meta property="og:title" content={title} />
		<meta property="og:url" content="https://www.julivaro.com/" />
		<meta property="og:type" content="website" />
		<meta property="og:description" content={t("meta-tags.description")} />
		<meta
			property="og:image"
			content="https://res.cloudinary.com/dfyxdowwb/image/upload/c_scale,q_auto:best,w_479/v1687118147/portfolio/photo_add1zr.webp"
		/>
		<meta property="og:image:width" content="479" />
		<meta property="og:image:height" content="638" />
		<meta itemprop="name" content={title} />
		<meta itemprop="url" content="https://www.julivaro.com/" />
		<meta itemprop="description" content={t("meta-tags.description")} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:creator" content="@anvarzey" />
		<meta name="twitter:site" content="@anvarzey" />
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:description" content={t("meta-tags.description")} />
		<meta
			name="twitter:image"
			content="https://res.cloudinary.com/dfyxdowwb/image/upload/c_scale,q_auto:best,w_479/v1687118147/portfolio/photo_add1zr.webp"
		/>
		<link rel="canonical" href="https://www.julivaro.com/" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<HeadHrefLangs />
		<ClientRouter />
	</head>
	<body class="bg-background relative overflow-x-hidden">
		<Header />
		<slot />
		<footer class="border-t border-c-light-blue py-4 sm:py-6">
			<div class="footer-text text-zinc-400 text-center">
				Julian Varo | {currentYear}
			</div>
		</footer>
	</body>
</html>
